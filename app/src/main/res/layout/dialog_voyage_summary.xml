<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/rounded_rect_w"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voyage Summary"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bottom_padding"
        android:background="@drawable/rounded_rect_white"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvSummaryPitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="@dimen/inner_rect_margin"
            android:background="@drawable/line_bottom"
            android:padding="@dimen/setup_margin"
            android:text="@string/zero"
            android:textColor="@color/dark_gray"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Maximum Pitch Angle"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bottom_padding"
        android:layout_marginBottom="@dimen/bottom_padding"
        android:layout_gravity="center"
        android:background="@drawable/rounded_rect_bg">

        <TextView
            android:id="@+id/tvSummaryRoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="@dimen/inner_rect_margin"
            android:background="@drawable/line_bottom"
            android:padding="@dimen/setup_margin"
            android:text="@string/zero"
            android:textColor="@color/dark_gray"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Maximum Roll Angle"
            android:textColor="@color/gray"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bottom_padding"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_gravity="center"
        android:background="@drawable/rounded_rect_bg">

        <TextView
            android:id="@+id/tvSummarySignal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="@dimen/inner_rect_margin"
            android:background="@drawable/line_bottom"
            android:padding="@dimen/setup_margin"
            android:text="@string/zero"
            android:textColor="@color/dark_gray"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Minimum Signal Strength"
            android:textColor="@color/gray"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btOK"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="@color/white"/>

</LinearLayout>