<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/seawaves_logo_fit" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/rect_padding"
        android:layout_gravity="center"
        android:background="@drawable/rounded_rect_bg">

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="August 15, 2022  9:41 AM"
            android:textColor="@color/black"
            android:paddingTop="@dimen/inner_rect_margin"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:layout_margin="@dimen/inner_rect_margin"
            android:background="@drawable/rounded_rect"
            android:padding="10dp"
            android:text="Normal"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/main_status"
            android:textColor="@color/gray"
            android:paddingBottom="@dimen/rect_padding"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Offline"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="12sp"
        android:background="@color/black_overlay"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bottom_margin_row"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:background="@drawable/rounded_rect_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_rect_margin"
                        android:text="@string/zero"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="90"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/heading_title"
                            android:textAlignment="center"
                            android:background="@drawable/line_top"
                            android:layout_margin="3dp"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:background="@drawable/rounded_rect_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_rect_margin"
                        android:text="@string/zero"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="90"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/speed_title"
                            android:textAlignment="center"
                            android:background="@drawable/line_top"
                            android:layout_margin="3dp"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:background="@drawable/rounded_rect_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSignal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_rect_margin"
                        android:text="@string/zero"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="90"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/signal_title"
                            android:textAlignment="center"
                            android:background="@drawable/line_top"
                            android:layout_margin="3dp"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bottom_margin_row"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:background="@drawable/rounded_rect_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_rect_margin"
                        android:text="@string/zero"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="90"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/pitch_title"
                            android:textAlignment="center"
                            android:background="@drawable/line_top"
                            android:layout_margin="3dp"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:background="@drawable/rounded_rect_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRoll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_rect_margin"
                        android:text="@string/zero"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="90"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/roll_title"
                            android:textAlignment="center"
                            android:background="@drawable/line_top"
                            android:layout_margin="3dp"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="2" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:background="@drawable/rounded_rect_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAlt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_rect_margin"
                        android:text="@string/zero"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="90"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/alt_title"
                            android:textAlignment="center"
                            android:background="@drawable/line_top"
                            android:layout_margin="3dp"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bottom_margin_row"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:background="@drawable/rounded_rect_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGyro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_rect_margin"
                        android:text="@string/zero"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="90"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/gyro_title"
                            android:textAlignment="center"
                            android:background="@drawable/line_top"
                            android:layout_margin="3dp"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:background="@drawable/rounded_rect_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAccel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_rect_margin"
                        android:text="@string/zero"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="90"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/accel_title"
                            android:textAlignment="center"
                            android:background="@drawable/line_top"
                            android:layout_margin="3dp"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:background="@drawable/rounded_rect_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMagnet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_rect_margin"
                        android:text="@string/zero"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="90"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/magnet_title"
                            android:textAlignment="center"
                            android:background="@drawable/line_top"
                            android:layout_margin="3dp"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bottom_margin_row"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:background="@drawable/rounded_rect_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_rect_margin"
                        android:text="@string/zero"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp"
                        app:autoSizeTextType="uniform" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="90"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/lat_title"
                            android:textAlignment="center"
                            android:background="@drawable/line_top"
                            android:layout_margin="3dp"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:background="@drawable/rounded_rect_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_rect_margin"
                        android:text="@string/zero"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp"
                        app:autoSizeTextType="uniform" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="90"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/long_title"
                            android:textAlignment="center"
                            android:background="@drawable/line_top"
                            android:layout_margin="3dp"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btStop"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="@dimen/fab_margin"
        android:textColor="@color/white"
        android:backgroundTint="@color/dark_gray"
        android:text="@string/main_stop" />
</LinearLayout>